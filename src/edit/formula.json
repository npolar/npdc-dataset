{
	"fieldsets": [{
			"title": "Dataset",
			"fields": [{
					"id": "title"
				},
				"released",
				"progress",

				{ "id": "doi", "disabled": true, "title": "DOI: autogenerated when a dataset has a release date, at least one data link, a license, and at least one author"}
			]
		}, {
			"title": "Texts",
			"fields": [{
					"id": "summary: short abstract of the dataset",
					"type": "textarea"
				},
		{
					"id": "quality",
					"title": "data management: methods, processing, methods, variables, quality control",
					"type": "textarea"
				},
				"comment"
			]
		},
		 {
			"title": "Links",
			"fields": [{
				"id": "links",
				"instance": "links",
				"items": {
					"fields": [{
							"id": "rel",
							"title": "relation to dataset",
							"enum": ["data",
								"related",
								"service",
								"metadata",
								"project",
								"publication",
								"datacentre",
								"parent",
								"internal",
								"doi"
							]
						}, {
							"id": "href",
							"title": "Web address (URI)"
						},
						"!hreflang",
						"!hash",
						"!license",
						{ "id": "length", "title": "Download size in bytes (if known)" },
						"!etag", {
							"id": "type",
							"title": "IANA media type (if known)"
						},
						"!modified"
					]
				}
			}]
		},


		{
			"title": "Rights",
			"fields": [{
					"id": "licences",
					"title": "Licence for linked data"
				},
				{ "id": "rights", "type": "textarea" },
				{ "id": "restrictions", "title": "restrictions: only use if access to the dataset is restricted"},
				{ "id": "citation", "title": "custom citation (usually this should be left empty)"}
			]
		},
		{
			"title": "Coverage",
			"fields": [
				{
					"id": "activity",
					"title": "periods collection periods"
				},
				"coverage",
				"placenames"
			]
		}, {
			"title": "People",
			"fields": [{
				"id": "people",
				"fields": ["roles", "organisation"]
			}]
		}, {
			"title": "Organisations",
			"fields": [{
				"id": "organisations",
				"items": {
					"fields": [
						"!id",
						"email", {
							"id": "gcmd_short_name",
							"title": "GCMD short name"
						},
						"roles",
						"homepage"
					]
				}
			}]
		}, {
			"title": "Classification",
			"fields": [
				"topics",
				"iso_topics",
				"sets",
				"tags",
				"gcmd",
				"version",
				"draft"
			]
		},{
			"title": "File upload",
			"fields": [{ "id": "attachments"}]
		}
	]
}